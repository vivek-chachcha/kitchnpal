<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kitchnpal.kitchnpal">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="kitchnpal.ui.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kitchnpal.ui.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="kitchnpal.ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="kitchnpal.ui.UserPreferenceActivity"
            android:label="@string/title_activity_user_preference" />
        <activity
            android:name="kitchnpal.ui.FridgeActivity"
            android:label="@string/title_activity_add_ingredient" />
        <activity
            android:name="kitchnpal.ui.RecipeDisplayActivity"
            android:label="@string/title_activity_recipe_display"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
